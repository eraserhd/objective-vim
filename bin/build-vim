#!/bin/bash

set -e

rm -rf vim
hg clone https://vim.googlecode.com/hg/ vim
cd vim

if command -v rvm >/dev/null 2>&1
then
	rvm use system
fi

./configure \
	--prefix=/opt/objvim \
	--with-features=huge \
	--enable-rubyinterp=yes \
	--with-ruby-command=/opt/objvim/bin/objvim_ruby \
	--with-compiledby='Jason Felice <jason.m.felice@gmail.com>'
make
make install
	
