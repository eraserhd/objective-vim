#!/bin/bash

set -e

rm -rf vim
tar xzf src/vim*.tar.gz
cd vim

if command -v rvm >/dev/null 2>&1
then
	rvm use system
fi

./configure \
	--prefix=/opt/objvim \
	--with-features=huge \
	--enable-rubyinterp=yes \
	--with-ruby-command=/opt/objvim/bin/objvim_ruby \
	--enable-pythoninterp \
	--with-python-config-dir=/usr/lib/python*/config \
	--enable-tclinterp \
	--with-tclsh=/usr/bin/tclsh \
	--enable-perlinterp \
	--with-compiledby='Jason Felice <jason.m.felice@gmail.com>'
make
make install
	
